class Quarto {
  int id; // Identificador único do quarto
  String numeroQuarto;
  String tipo; // simples, luxo, suíte
  String status; // ocupado, disponível
  double precoPorNoite;
  List<Reserva> reservas = []; // Lista de reservas associadas a este quarto

  Quarto({
    required this.id,
    required this.numeroQuarto,
    required this.tipo,
    required this.status,
    required this.precoPorNoite,
  });
}

class Hospede {
  int id; // Identificador único do hóspede
  String nome;
  String sobrenome;
  String documentoIdentificacao;
  String contato;
  List<Reserva> reservas = []; // Lista de reservas feitas por este hóspede

  Hospede({
    required this.id,
    required this.nome,
    required this.sobrenome,
    required this.documentoIdentificacao,
    required this.contato,
  });
}

class Funcionario {
  int id; // Identificador único do funcionário
  String nome;
  String cargo;
  double salario;
  DateTime dataAdmissao;

  Funcionario({
    required this.id,
    required this.nome,
    required this.cargo,
    required this.salario,
    required this.dataAdmissao,
  });
}

class Reserva {
  int id; // Identificador único da reserva
  DateTime dataEntrada;
  DateTime dataSaida;
  Hospede hospedeResponsavel;
  Quarto quartoReservado;
  List<ServicoAdicional> servicosAdicionais = [];

  Reserva({
    required this.id,
    required this.dataEntrada,
    required this.dataSaida,
    required this.hospedeResponsavel,
    required this.quartoReservado,
  });
}

class ServicoAdicional {
  int id; // Identificador único do serviço adicional
  String descricao;
  double preco;

  ServicoAdicional({
    required this.id,
    required this.descricao,
    required this.preco,
  });
}
